# =============================================================================
# Server Configuration
# =============================================================================
SERVER_PORT=8080
SERVER_HOST=localhost

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=users

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARN, ERROR, FATAL
LOG_LEVEL=INFO

# Service identification
SERVICE_NAME=users
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# External logging (optional)
# Elasticsearch integration via Zap logger
# If any of these variables are set, Elasticsearch integration will be enabled
LOG_ELASTIC_URL=http://localhost:9200
LOG_ELASTIC_USERNAME=
LOG_ELASTIC_PASSWORD=
LOG_ELASTIC_INDEX=users-logs
# Enable/disable health check for Elasticsearch (default: true)
LOG_ELASTIC_HEALTH_CHECK=true
# Enable debug logging for Elasticsearch operations (default: false)
LOG_ELASTIC_DEBUG=false

# =============================================================================
# FX Framework Configuration
# =============================================================================
# Enable/disable FX framework logging
FX_ENABLED=true

# Debug options (only for development)
FX_DEBUG=false
FX_VERBOSE=false
FX_SHOW_GRAPH=false

# =============================================================================
# HMAC Authentication Configuration
# =============================================================================
# HMAC algorithm: sha256, sha512
HMAC_ALGORITHM=sha256

# Maximum age of HMAC signature in seconds
HMAC_MAX_AGE=300

# Enable/disable HMAC authentication
HMAC_REQUIRED=true

# Client secrets configuration
# Format: JSON array of client objects
HMAC_CLIENT_SECRETS=[{"clientid": "example","secret":"test","department":"example","descr":"example api"}]

# Route permissions configuration
# Format: JSON object mapping client IDs to allowed routes
HMAC_ROUTE_RIGHTS='{"example":["/api/v1/users"]}'

# =============================================================================
# Example HMAC Configurations
# =============================================================================
# Example 1: Multiple clients with different permissions
# HMAC_CLIENT_SECRETS=[{"clientid":"admin","secret":"admin-secret","department":"admin","descr":"admin client"},{"clientid":"user","secret":"user-secret","department":"user","descr":"user client"}]
# HMAC_ROUTE_RIGHTS='{"admin":["*"],"user":["/api/v1/users"]}'

# Example 2: Client with access to all API routes
# HMAC_CLIENT_SECRETS=[{"clientid":"full-access","secret":"full-secret","department":"full","descr":"full access client"}]
# HMAC_ROUTE_RIGHTS='{"full-access":["/api/v1/"]}'

# =============================================================================
# Development Configuration
# =============================================================================
# Enable debug mode for detailed logging
SERVICE_DEBUG=false